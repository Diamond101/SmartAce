@using System.Globalization



@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
    // AdminSession adminSession = (AdminSession)HttpContext.Current.Session["AdminSession"];
}

@model dynamic

<div class="content-wrapper">
    <div class="row">
        <div class="col-xl-3 col-lg-3 col-md-3 col-sm-6 grid-margin stretch-card">
            <div class="card card-statistics">
                <div class="card-body">
                    <div class="clearfix">
                        <div class="float-left">
                            <i class="mdi mdi-account-location text-info icon-lg"></i>
                        </div>
                        <div class="float-right">
                            <p class="mb-0 text-right">Total System Users</p>
                            <div class="fluid-container">
                                <h3 class="font-weight-medium text-right mb-0">@ViewBag.Total</h3>
                            </div>
                        </div>
                    </div>
                    <p class="text-muted mt-3 mb-0">

                        <i class="mdi mdi-bookmark-outline mr-1" aria-hidden="true"></i> Total Users
                    </p>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-lg-3 col-md-3 col-sm-6 grid-margin stretch-card">
            <div class="card card-statistics">
                <div class="card-body">
                    <div class="clearfix">
                        <div class="float-left">
                            <i class="mdi mdi-account-location text-info icon-lg"></i>
                        </div>
                        <div class="float-right">
                            
                                <p class="mb-0 text-right">Total Books in Store</p>

                                <p class="mb-0 text-right">@ViewBag.TotalBooks  </p>
                                <div class="fluid-container">
                                    <h3 class="font-weight-medium text-right mb-0">@ViewBag.TotalBooks</h3>
                                </div>
                            
                        </div>
                    </div>
                    <p class="text-muted mt-3 mb-0">
                        <i class="mdi mdi-bookmark-outline mr-1" aria-hidden="true"></i> Library Inventory Stock
                    </p>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-lg-3 col-md-3 col-sm-6 grid-margin stretch-card">
            <div class="card card-statistics">
                <div class="card-body">
                    <div class="clearfix">
                        <div class="float-left">
                            <i class="mdi mdi-account-location text-info icon-lg"></i>
                        </div>
                        <div class="float-right">
                            
                                <p class="mb-0 text-right">Check Out Books</p>
                                <p class="mb-0 text-right">@ViewBag.TotalCheckout </p>
                                <div class="fluid-container">
                                    <h3 class="font-weight-medium text-right mb-0">@ViewBag.TotalCheckout</h3>
                                </div>
                           
                        </div>
                    </div>
                    <p class="text-muted mt-3 mb-0">
                        <i class="mdi mdi-bookmark-outline mr-1" aria-hidden="true"></i> Total Check Out
                    </p>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-lg-3 col-md-3 col-sm-6 grid-margin stretch-card">
            <div class="card card-statistics">
                <div class="card-body">
                    <div class="clearfix">
                        <div class="float-left">
                            <i class="mdi mdi-account-location text-info icon-lg"></i>
                        </div>
                        <div class="float-right">
                            
                                <p class="mb-0 text-right">Total Check in Books</p>
                                <p class="mb-0 text-right">@ViewBag.TotalCheckin </p>
                                <div class="fluid-container">
                                    <h3 class="font-weight-medium text-right mb-0">@ViewBag.TotalCheckin </h3>
                                </div>
                           
                        </div>
                    </div>
                    <p class="text-muted mt-3 mb-0">
                        <i class="mdi mdi-bookmark-outline mr-1" aria-hidden="true"></i> Check In Books
                    </p>
                </div>
            </div>
        </div>

    </div>

    <div class="row">
        <div class="col-lg-7 grid-margin stretch-card">
            <!--weather card-->
            <div class="card card-weather">
                <div class="card-body">
                    <div class="weather-date-location">
                        <h3>@DateTime.Now.DayOfWeek</h3>
                        <p class="text-gray">
                            <span style="" class="weather-date">@DateTime.Now.ToString("F", CultureInfo.CreateSpecificCulture("en-US"))</span>
                            <br />
                            <span class="weather-location">Smart Ace Software Limited, Lagos</span>
                        </p>
                    </div>
                    <div class="weather-data d-flex">
                        <div class="mr-auto">
                            <h4 class="display-3">
                               
                                   <h4 class="display-3">Smart Ace Library User Page.</h4>
                                
                            </h4>
                            <p>
                                Smart Group.
                            </p>
                        </div>
                    </div>
                </div>

                <div class="card-body p-1">

                    <div class="d-flex weakly-weather">
                        
                       
                            <div class="weakly-weather-item">

                                <p class="mb-auto">
                                   
                                </p>
                            </div>
                         <div class="weakly-weather-item">
                                <p class="mb-1">
                                    Application 1
                                </p>
                            </div>
                            <div class="weakly-weather-item">
                                <p class="mb-1">
                                    Application 1
                                </p>
                            </div>
                            <div class="weakly-weather-item">
                                <p class="mb-1">
                                    Application 1
                                </p>
                            </div>
                            <div class="weakly-weather-item">
                                <p class="mb-1">
                                    Application 1
                                </p>
                            </div>
                        <div class="weakly-weather-item">
                            <p class="mb-1">
                                And Many More...
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <!--weather card ends-->
        </div>
        <div class="col-lg-5 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-primary mb-5">Smart Ace Library Performance - As at today @DateTime.Now.ToShortDateString()</h2>
                    <div class="wrapper">
                        <div class="d-flex justify-content-between">
                            <p class="mb-2">Total System Users</p>
                            <p class="mb-2 text-primary">@ViewBag.Total <span>(@ViewBag.Total %)</span></p>
                        </div>
                        <div class="progress">
                            <div class="progress-bar bg-primary progress-bar-striped progress-bar-animated" role="progressbar" style="width: @ViewBag.Total%" aria-valuenow="100"
                                 aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                    <div class="wrapper mt-4">
                        <div class="d-flex justify-content-between">
                            <p class="mb-2">Total Books in Store</p>
                            <p class="mb-2 text-success">@ViewBag.TotalBooks <span>(@ViewBag.TotalBooks %)</span></p>
                        </div>
                        <div class="progress">
                            <div class="progress-bar bg-success progress-bar-striped progress-bar-animated" role="progressbar" style="width: @ViewBag.TotalBooks%" aria-valuenow="0"
                                 aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                    <div class="wrapper mt-4">
                        <div class="d-flex justify-content-between">
                            <p class="mb-2">Total Checked Out Books</p>
                            <p class="mb-2 text-success">@ViewBag.TotalCheckout <span>(@ViewBag.PercentInActiveUser %)</span></p>
                        </div>
                        <div class="progress">
                            <div class="progress-bar bg-warning progress-bar-striped progress-bar-animated" role="progressbar" style="width: @ViewBag.TotalCheckout%" aria-valuenow="0"
                                 aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                    <div class="wrapper mt-4">
                        <div class="d-flex justify-content-between">
                            <p class="mb-2">Total Check in Books</p>
                            <p class="mb-2 text-success">@ViewBag.TotalCheckin <span>(@ViewBag.PercentDeleted %)</span></p>
                        </div>
                        <div class="progress">
                            <div class="progress-bar bg-danger progress-bar-striped progress-bar-animated" role="progressbar" style="width: @ViewBag.TotalCheckin%" aria-valuenow="0"
                                 aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                    <div class="wrapper mt-4">
                        <div class="d-flex justify-content-between">
                            <p class="mb-2">New Detail</p>
                            <p class="mb-2 text-success">@ViewBag.NewUser <span>(@ViewBag.PercentNewUser %)</span></p>
                        </div>
                        <div class="progress">
                            <div class="progress-bar bg-success progress-bar-striped progress-bar-animated" role="progressbar" style="width: @ViewBag.PercentNewUser%" aria-valuenow="100"
                                 aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                    <div class="wrapper mt-4">
                        <div class="d-flex justify-content-between">
                            <p class="mb-2">New Detail</p>
                            <p class="mb-2 text-success">@ViewBag.Declined <span>(@ViewBag.PercentDeclined %)</span></p>
                        </div>
                        <div class="progress">
                            <div class="progress-bar bg-primary progress-bar-striped progress-bar-animated" role="progressbar" style="width: @ViewBag.PercentDeclined%" aria-valuenow="100"
                                 aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
